<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="Calculadora"
        android:textColor="#6200EE"
        android:shadowColor="#3A0783"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textColor="#6200EE"
        android:gravity="right"
        android:layout_marginVertical="20sp"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_7"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="7" />

            <Button
                android:id="@+id/bt_4"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="4" />

            <Button
                android:id="@+id/bt_1"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="1" />

            <Button
                android:id="@+id/bt_ponto"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="." />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_8"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="8" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="5" />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="2" />

            <Button
                android:id="@+id/bt_0"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_9"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="9" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="6" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/purple_500"
                android:text="3" />

            <Button
                android:id="@+id/bt_c"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:backgroundTint="@color/white"
                android:textColor="#6200EE"
                android:text="C" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_mais"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:text="+" />

            <Button
                android:id="@+id/bt_menos"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:text="-" />

            <Button
                android:id="@+id/bt_div"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:text="/" />

            <Button
                android:id="@+id/bt_vezes"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="25sp"
                android:text="*" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_igual"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="=" />

</LinearLayout>